{
  "name": "fv1-vscode",
  "displayName": "Audiofab FV-1 Programming",
  "description": "An extension providing development support for Spin Semiconductor's FV-1 chip and programming support for the Audiofab Easy Spin guitar pedal.",
  "version": "1.3.3",
  "publisher": "ms-audiofab",
  "publisherDisplayName": "Audiofab Inc.",
  "icon": "doc/logo_600x493.png",
  "galleryBanner": {
    "theme": "light"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/audiofab/fv1-vscode"
  },
  "type": "module",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "FV-1",
    "assembly",
    "spin-semiconductor",
    "dsp",
    "audio"
  ],
  "activationEvents": [],
  "main": "./dist/extension.cjs",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fv1-explorer",
          "title": "Audiofab Easy Spin",
          "icon": "resources/audiofab-icon.svg"
        }
      ]
    },
    "views": {
      "fv1-explorer": [
        {
          "icon": "resources/audiofab-icon.svg",
          "id": "fv1-quick-actions",
          "name": "Quick Actions"
        }
      ],
      "debug": [
        {
          "id": "fv1Monitor",
          "name": "FV-1 Audio Monitor",
          "type": "webview",
          "icon": "$(pulse)"
        }
      ]
    },
    "languages": [
      {
        "id": "fv1-assembly",
        "aliases": [
          "FV-1 Assembly",
          "fv1"
        ],
        "extensions": [
          ".spn"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./resources/light/spn-file.svg",
          "dark": "./resources/dark/spn-file.svg"
        }
      },
      {
        "id": "spnbank",
        "aliases": [
          "Easy Spin Bank"
        ],
        "extensions": [
          ".spnbank"
        ],
        "icon": {
          "light": "./resources/light/spnbank-file.svg",
          "dark": "./resources/dark/spnbank-file.svg"
        }
      },
      {
        "id": "spndiagram",
        "aliases": [
          "FV-1 Block Diagram"
        ],
        "extensions": [
          ".spndiagram"
        ],
        "icon": {
          "light": "./resources/light/spndiagram-file.svg",
          "dark": "./resources/dark/spndiagram-file.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "fv1-assembly",
        "scopeName": "source.fv1-assembly",
        "path": "./syntaxes/fv1-assembly.tmGrammar.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "fv1.blockDiagramEditor",
        "displayName": "FV-1 Block Diagram",
        "selector": [
          {
            "filenamePattern": "*.spndiagram"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "audiofab.spnBankEditor",
        "displayName": "FV-1 Program Bank",
        "selector": [
          {
            "filenamePattern": "*.spnbank"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "fv1.assemble",
        "title": "Assemble current file",
        "category": "FV-1"
      },
      {
        "command": "fv1.assembleAndProgram",
        "title": "Assemble current file and load to EEPROM",
        "category": "FV-1"
      },
      {
        "command": "fv1.assembleToHex",
        "title": "Assemble current file to an Intel HEX file",
        "category": "FV-1"
      },
      {
        "command": "fv1.createSpnBank",
        "title": "Create new program bank (.spnbank)",
        "category": "FV-1",
        "icon": {
          "light": "./resources/light/spnbank-file.svg",
          "dark": "./resources/dark/spnbank-file.svg"
        }
      },
      {
        "command": "fv1.createBlockDiagram",
        "title": "Create new block diagram program (.spndiagram)",
        "category": "FV-1",
        "icon": {
          "light": "./resources/light/spndiagram-file.svg",
          "dark": "./resources/dark/spndiagram-file.svg"
        }
      },
      {
        "command": "fv1.programSpnBank",
        "title": "Program Bank",
        "category": "FV-1"
      },
      {
        "command": "fv1.programThisSlot",
        "title": "Program this slot",
        "category": "FV-1"
      },
      {
        "command": "fv1.unassignSlot",
        "title": "Unassign slot",
        "category": "FV-1"
      },
      {
        "command": "fv1.exportBankToHex",
        "title": "Export to .hex",
        "category": "FV-1"
      },
      {
        "command": "fv1.loadHexToEeprom",
        "title": "Load .hex to EEPROM",
        "category": "FV-1"
      },
      {
        "command": "fv1.backupPedal",
        "title": "Backup pedal",
        "category": "FV-1"
      },
      {
        "command": "fv1.startSimulator",
        "title": "Run In Simulator",
        "category": "FV-1"
      }
    ],
    "keybindings": [
      {
        "command": "fv1.assemble",
        "key": "ctrl+f5",
        "when": "editorTextFocus && resourceExtname == .spn"
      },
      {
        "command": "fv1.assembleAndProgram",
        "key": "ctrl+shift+f5",
        "when": "editorTextFocus && (resourceExtname == .spn || resourceExtname == .spndiagram)"
      },
      {
        "command": "fv1.assembleToHex",
        "key": "ctrl+alt+f5",
        "when": "editorTextFocus && resourceExtname == .spn"
      },
      {
        "command": "fv1.loadHexToEeprom",
        "key": "ctrl+shift+f6",
        "when": "editorTextFocus && resourceExtname == .hex"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "fv1.createBlockDiagram",
          "when": "view == fv1-quick-actions",
          "group": "navigation@1"
        },
        {
          "command": "fv1.createSpnBank",
          "when": "view == fv1-quick-actions",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "fv1.programSpnBank",
          "when": "false"
        },
        {
          "command": "fv1.programThisSlot",
          "when": "false"
        },
        {
          "command": "fv1.unassignSlot",
          "when": "false"
        },
        {
          "command": "fv1.exportBankToHex",
          "when": "false"
        },
        {
          "command": "fv1.assemble",
          "when": "resourceExtname == .spn"
        },
        {
          "command": "fv1.assembleAndProgram",
          "when": "resourceExtname == .spn || resourceExtname == .spndiagram"
        },
        {
          "command": "fv1.assembleToHex",
          "when": "resourceExtname == .spn || resourceExtname == .spndiagram"
        },
        {
          "command": "fv1.loadHexToEeprom",
          "when": "resourceExtname == .hex"
        },
        {
          "command": "fv1.startSimulator",
          "when": "resourceExtname == .spn || resourceExtname == .spndiagram"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .spn || resourceExtname == .spndiagram",
          "command": "fv1.startSimulator",
          "group": "fv1@0"
        },
        {
          "when": "resourceExtname == .spn",
          "command": "fv1.assemble",
          "group": "fv1@1"
        },
        {
          "when": "resourceExtname == .spn",
          "command": "fv1.assembleAndProgram",
          "group": "fv1@2"
        },
        {
          "when": "resourceExtname == .hex",
          "command": "fv1.loadHexToEeprom",
          "group": "fv1@1"
        }
      ],
      "explorer/context": []
    },
    "debuggers": [
      {
        "type": "fv1-debug",
        "label": "FV-1 Simulator Debugger",
        "languages": [
          "fv1-assembly"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the .spn file to debug.",
                "default": "${file}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Stop at the first instruction after launch.",
                "default": true
              },
              "inputWavFile": {
                "type": "string",
                "description": "Path to a .wav file to use as ADC input.",
                "default": "src/simulator/wav/minor-chords-32k.wav"
              },
              "sampleRate": {
                "type": "number",
                "description": "The sampling rate for the simulation (Hz).",
                "enum": [
                  32768,
                  44100,
                  48000
                ],
                "default": 32768
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "fv1-debug",
            "request": "launch",
            "name": "Debug current FV-1 program",
            "program": "${file}",
            "stopOnEntry": true
          }
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "fv1-assembly"
      }
    ],
    "configuration": {
      "title": "Audiofab FV-1",
      "properties": {
        "fv1.autoShowOutputWindow": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show Output Window on output"
        },
        "fv1.verbose": {
          "type": "boolean",
          "default": false,
          "description": "Operate in verbose mode"
        },
        "fv1.i2cAddress": {
          "type": "number",
          "default": 80,
          "description": "I2C address of the EEPROM (default 0x50)"
        },
        "fv1.writePageSize": {
          "type": "number",
          "default": 32,
          "description": "EEPROM page write size in bytes (default 32)"
        },
        "fv1.verifyWrites": {
          "type": "boolean",
          "default": true,
          "description": "Read back EEPROM contents after writing to verify"
        },
        "fv1.spinAsmMemBug": {
          "type": "boolean",
          "default": true,
          "description": "Emulate SpinASM IDE memory bug (wastes one word per MEM block)"
        },
        "fv1.clampReals": {
          "type": "boolean",
          "default": true,
          "description": "Clamp real number values to valid ranges (emulates SpinASM IDE behavior)"
        },
        "fv1.mcp2221VendorId": {
          "type": "string",
          "default": "04D8",
          "description": "MCP2221 USB Vendor ID"
        },
        "fv1.mcp2221ProductId": {
          "type": "string",
          "default": "00DD",
          "description": "MCP2221 USB Product ID"
        },
        "fv1.hardware.regCount": {
          "type": "number",
          "default": 32,
          "description": "Number of registers in the target FV-1 hardware (Simulator/Assembler limit)"
        },
        "fv1.hardware.progSize": {
          "type": "number",
          "default": 128,
          "description": "Total program memory size in instructions (Simulator/Assembler limit)"
        },
        "fv1.hardware.delaySize": {
          "type": "number",
          "default": 32768,
          "description": "Total delay memory size in samples (Simulator/Assembler limit)"
        },
        "fv1.simulation.visualizationsEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable visualizations (Oscilloscope and Memory Map) in the Audio Monitor."
        },
        "fv1.simulation.oscilloscopeRefreshRate": {
          "type": "number",
          "default": 1,
          "enum": [
            1,
            64,
            128
          ],
          "enumDescriptions": [
            "Every Frame (1)",
            "64 Frames",
            "128 Frames"
          ],
          "description": "The rate at which registers are sampled for the oscilloscope."
        },
        "fv1.simulation.stopOnEntry": {
          "type": "boolean",
          "default": true,
          "description": "Stop at the first instruction after launch."
        }
      }
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.cjs",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.cjs --watch",
    "compile-tests": "tsc -p ./ --outDir out",
    "pretest": "npm run compile-tests",
    "test": "node test/assembler-test.mjs",
    "test-sim": "node test/simulator-test.mjs",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.cjs --production"
  },
  "devDependencies": {
    "@types/node": "25.x",
    "@types/node-hid": "^3.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.2",
    "@types/uuid": "^11.0.0",
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.27.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@johntalton/eeprom": "^1.1.1",
    "@johntalton/i2c-bus-mcp2221": "^4.2.1",
    "@johntalton/mcp2221": "^4.0.4",
    "konva": "^10.2.0",
    "node-hid": "^3.2.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-konva": "^19.2.2",
    "uuid": "^13.0.0"
  }
}