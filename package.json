{
  "name": "fv1-vscode",
  "displayName": "Audiofab FV-1 Programming",
  "description": "An extension providing development support for Spin Semiconductor's FV-1 chip and programming support for the Audiofab Easy Spin guitar pedal.",
  "version": "1.1.1",
  "publisher": "ms-audiofab",
  "publisherDisplayName": "Audiofab Inc.",
  "icon": "doc/logo_600x493.png",
  "galleryBanner": {
    "theme": "light"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/audiofab/fv1-vscode"
  },
  "type": "module",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "FV-1",
    "assembly",
    "spin-semiconductor",
    "dsp",
    "audio"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "fv1-assembly",
        "aliases": [
          "FV-1 Assembly",
          "fv1"
        ],
        "extensions": [
          ".spn"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./resources/light/spn-file.svg",
          "dark": "./resources/dark/spn-file.svg"
        }
      },
      {
        "id": "spnbank",
        "aliases": [
          "Easy Spin Bank"
        ],
        "extensions": [
          ".spnbank"
        ],
        "icon": {
          "light": "./resources/light/spnbank-file.svg",
          "dark": "./resources/dark/spnbank-file.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "fv1-assembly",
        "scopeName": "source.fv1-assembly",
        "path": "./syntaxes/fv1-assembly.tmGrammar.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "fv1.blockDiagramEditor",
        "displayName": "FV-1 Block Diagram",
        "selector": [
          {
            "filenamePattern": "*.spndiagram"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "fv1.assemble",
        "title": "Assemble current file",
        "category": "FV-1"
      },
      {
        "command": "fv1.assembleAndProgram",
        "title": "Assemble current file and load to EEPROM",
        "category": "FV-1"
      },
      {
        "command": "fv1.assembleToHex",
        "title": "Assemble current file to an Intel HEX file",
        "category": "FV-1"
      },
      {
        "command": "fv1.createSpnBank",
        "title": "Create new .spnbank",
        "category": "FV-1"
      },
      {
        "command": "fv1.createBlockDiagram",
        "title": "Create new block diagram",
        "category": "FV-1"
      },
      {
        "command": "fv1.programSpnBank",
        "title": "Program Bank",
        "category": "FV-1"
      },
      {
        "command": "fv1.programThisSlot",
        "title": "Program this slot",
        "category": "FV-1"
      },
      {
        "command": "fv1.unassignSlot",
        "title": "Unassign slot",
        "category": "FV-1"
      },
      {
        "command": "fv1.revealSpnBank",
        "title": "Reveal Easy Spin Bank",
        "category": "FV-1"
      },
      {
        "command": "fv1.exportBankToHex",
        "title": "Export to .hex",
        "category": "FV-1"
      },
      {
        "command": "fv1.loadHexToEeprom",
        "title": "Load .hex to EEPROM",
        "category": "FV-1"
      },
      {
        "command": "fv1.backupPedal",
        "title": "Backup pedal",
        "category": "FV-1"
      }
    ],
    "keybindings": [
      {
        "command": "fv1.assemble",
        "key": "ctrl+f5",
        "when": "editorTextFocus && resourceExtname == .spn"
      },
      {
        "command": "fv1.assembleAndProgram",
        "key": "ctrl+shift+f5",
        "when": "editorTextFocus && resourceExtname == .spn"
      },
      {
        "command": "fv1.assembleToHex",
        "key": "ctrl+alt+f5",
        "when": "editorTextFocus && resourceExtname == .spn"
      },
      {
        "command": "fv1.loadHexToEeprom",
        "key": "ctrl+shift+f6",
        "when": "editorTextFocus && resourceExtname == .hex"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "audiofab.spnBanks",
          "name": "Easy Spin Banks",
          "icon": "doc/logo_600x493.png"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "fv1.programSpnBank",
          "when": "false"
        },
        {
          "command": "fv1.programThisSlot",
          "when": "false"
        },
        {
          "command": "fv1.unassignSlot",
          "when": "false"
        },
        {
          "command": "fv1.revealSpnBank",
          "when": "false"
        },
        {
          "command": "fv1.exportBankToHex",
          "when": "false"
        },
        {
          "command": "fv1.assemble",
          "when": "resourceExtname == .spn"
        },
        {
          "command": "fv1.assembleAndProgram",
          "when": "resourceExtname == .spn"
        },
        {
          "command": "fv1.assembleToHex",
          "when": "resourceExtname == .spn"
        },
        {
          "command": "fv1.loadHexToEeprom",
          "when": "resourceExtname == .hex"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .spn",
          "command": "fv1.assemble",
          "group": "fv1@1"
        },
        {
          "when": "resourceExtname == .spn",
          "command": "fv1.assembleAndProgram",
          "group": "fv1@2"
        },
        {
          "when": "resourceExtname == .hex",
          "command": "fv1.loadHexToEeprom",
          "group": "fv1@1"
        }
      ],
      "explorer/context": [],
      "view/item/context": [
        {
          "when": "view == audiofab.spnBanks && viewItem == spnSlotAssigned",
          "command": "fv1.programThisSlot",
          "group": "inline"
        },
        {
          "when": "view == audiofab.spnBanks && viewItem == spnSlotAssigned",
          "command": "fv1.unassignSlot",
          "group": "inline"
        },
        {
          "when": "view == audiofab.spnBanks && viewItem == spnBank",
          "command": "fv1.programSpnBank",
          "group": "navigation"
        },
        {
          "when": "view == audiofab.spnBanks && viewItem == spnBank",
          "command": "fv1.exportBankToHex",
          "group": "navigation"
        }
      ],
      "view/item/toolbar": [
        {
          "when": "view == audiofab.spnBanks && viewItem == spnSlotAssigned",
          "command": "fv1.unassignSlot",
          "group": "inline",
          "icon": {
            "light": "resources/light/unassign.svg",
            "dark": "resources/dark/unassign.svg"
          }
        }
      ]
    },
    "configuration": {
      "title": "Audiofab FV-1",
      "properties": {
        "fv1.autoShowOutputWindow": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show Output Window on output"
        },
        "fv1.verbose": {
          "type": "boolean",
          "default": false,
          "description": "Operate in verbose mode"
        },
        "fv1.i2cAddress": {
          "type": "number",
          "default": 80,
          "description": "I2C address of the EEPROM (default 0x50)"
        },
        "fv1.writePageSize": {
          "type": "number",
          "default": 32,
          "description": "EEPROM page write size in bytes (default 32)"
        },
        "fv1.verifyWrites": {
          "type": "boolean",
          "default": true,
          "description": "Read back EEPROM contents after writing to verify"
        },
        "fv1.spinAsmMemBug": {
          "type": "boolean",
          "default": true,
          "description": "Emulate SpinASM IDE memory bug (wastes one word per MEM block)"
        },
        "fv1.mcp2221VendorId": {
          "type": "string",
          "default": "04D8",
          "description": "MCP2221 USB Vendor ID"
        },
        "fv1.mcp2221ProductId": {
          "type": "string",
          "default": "00DD",
          "description": "MCP2221 USB Product ID"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run compile-webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile-webview": "node build-webview.js",
    "watch-webview": "node build-webview.js --watch"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/node-hid": "^1.3.4",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.74.0",
    "esbuild": "^0.25.11",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@johntalton/eeprom": "^1.1.1",
    "@johntalton/i2c-bus-mcp2221": "^4.2.1",
    "@johntalton/mcp2221": "^4.0.4",
    "konva": "^10.0.2",
    "node-hid": "^3.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-konva": "^19.0.10",
    "uuid": "^13.0.0"
  }
}
