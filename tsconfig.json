{
  "compilerOptions": {
    "module": "node16",
    "target": "esnext",
    "outDir": "out",
    "lib": ["esnext"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "allowJs": true,
    "moduleResolution": "node16"
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": [
    "node_modules", 
    ".vscode-test",
    "src/blockDiagram/editor/webview/**/*"
  ]
}
